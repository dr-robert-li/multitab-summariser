{
  "manifest_version": 3,
  "name": "Multi-Tab Summarizer",
  "version": "3.0.0",
  "description": "Generate AI-powered summaries of all open tabs using OpenAI, Claude, Perplexity, or local Ollama models",
  "permissions": [
    "tabs",
    "activeTab", 
    "storage",
    "scripting",
    "webNavigation",
    "declarativeContent"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["sidebar.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Multi-Tab Summarizer"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["sidebar.html", "sidebar.css", "sidebar.js"],
      "matches": ["<all_urls>"]
    }
  ]
}